# Load the XML content
$xmlContent = Get-Content -Path "path\to\your\example.xml"

# Create an XPath expression to find the target node
$xPathExpression = "//Items"

# Use Select-Xml to find the node(s) based on the XPath expression
$xmlNode = Select-Xml -Xml $xmlContent -XPath $xPathExpression

# Check if the node was found
if ($xmlNode -ne $null) {
    # Create new XML content to add
    $newXmlContent = @"
    <NewItem>
        <ID>NewID001</ID>
    </NewItem>
"@

    # Convert the new XML content to an XML node
    $newXmlNode = [xml]$newXmlContent

    # Append the new XML content to the target node
    $xmlNode.Node.AppendChild($xmlNode.Node.OwnerDocument.ImportNode($newXmlNode.DocumentElement, $true))

    # Save the modified XML content
    $xmlContent.Save("path\to\your\example.xml")
} else {
    Write-Host "Node not found with the specified XPath expression."
}






# Load the XML content
$xmlPath = "path\to\your\example.xml"
$xmlContent = [xml](Get-Content -Path $xmlPath)

# Create new XML content to add
$newXmlContent = @"
<NewItem>
    <ID>NewID001</ID>
</NewItem>
"@

# Convert the new XML content to an XML node
$newXmlNode = [xml]$newXmlContent

# Find the target node using XPath
$targetNode = $xmlContent.SelectSingleNode("//Items")

# Append the new XML content to the target node
$targetNode.AppendChild($xmlContent.ImportNode($newXmlNode.DocumentElement, $true))

# Save the modified XML content
$xmlContent.Save($xmlPath)
